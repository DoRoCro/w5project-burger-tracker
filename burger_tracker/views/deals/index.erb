<h1>Deal listing</h1>
<p></p>
<hr>
<!-- ruby code to get list do -->
<%
 deals = Deal.all.sort_by!{|x| x.label} 
 deals.each do |deal|   %>
<ul>
  <li>
    <a href="/restaurants/<%= deal.restaurant.id %>/deals/<%= deal.id %>">
    <%= deal.label %></a> <em><%= deal.restaurant.name %> </em>; <%= deal.discount * 100.0  %>% discount &amp; <%= deal.money_off %>p off
    <hr>
  </li>
</ul>
<% end %> <!-- ruby end -->