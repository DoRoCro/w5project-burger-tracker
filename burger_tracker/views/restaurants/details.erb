<!-- Restaurant Details page -->
<h1>Details for <%=@restaurant.name%></h1>
<!-- MVP show name  - done in title-->
<!-- MVP show address details -->
<h2>Address:</h2>
<p><%= @restaurant.address.street_addr %> <%=@restaurant.address.street %></p>
<p><%= @restaurant.address.area %></p>
<p><%= @restaurant.address.city %></p>
<p><%= @restaurant.address.post_code %></p>
<p><%= @restaurant.address.telephone %></p>

<a class="link-to-details" href="/restaurants/<%= @restaurant.id %>/edit">Edit details</a>
<hr>
<h2>Available burgers</h2>
<!-- list burgers for restaurant -->
<!-- for each burger show -->
<% @restaurant.burgers.each do |burger| %>
  <!-- MVP label -->
<p>Name: <%= burger.name %></p>
  <!-- price  Enhancement - show Â£x.xx instead of pence -->
<p>Price: <%= burger.price %>p</p>
  <!-- preference -->
<p>Stars: <% burger.preference.times do %> <%= p "* " %> <% end %></p>
<a class="link-to-details" href="/restaurants/<%= @restaurant.id %>/burgers/<%= burger.id %>/edit">Edit details</a>
<hr>
<% end %>
  <!-- Enhancement - order by preference or by name or by price or when next in a deal -->

<a class="link-to-details" href="/restaurants/<%= @restaurant.id %>/burgers/new">Add new burger (to this restaurant)</a>
 
 <hr>
 <h2>Deals at <%=@restaurant.name%></h2>

 <% @restaurant.deals.each do |deal| %>
   <!-- MVP label -->
 <p>Label: <%= deal.label %></p>
   <!-- discount   -->
 <p>Discount: <%= deal.discount %></p>
   <!-- list burgers included -->
 <p>  on <%= deal.day %></p>
   <% deal.burgers.each do |burger| %>
   <p><%= burger.name %></p> 
   <% end %>
 <p></p>
   <!-- edit link -->
 <a class="link-to-details" href="/restaurants/<%= @restaurant.id %>/deals/<%= deal.id %>/edit">Edit details</a>
 <hr>
 <% end %>